<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:meta="http://xml.zope.org/namespaces/meta"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/@@shell/macros/shell"
      i18n:domain="euphorie"
>
  <body>
    <metal:slot fill-slot="content">
      <div id="document-content">
        <h1>${view/label}</h1>
        <p tal:condition="view/description">${view/description}</p>
        <form id="form"
              action="${view/action}"
              enctype="${view/enctype}"
              method="${view/method}"
        >
          <div class="panel-body">
            <fieldset class="vertical">
              <em class="message warning" tal:condition="view/error|nothing">${view/error}</em>
              <tal:widget repeat="widget view/widgets/values"
                          replace="structure widget/render"
              />
            </fieldset>
          </div>
          <div class="panel-footer">
            <fieldset class="vertical">
              <div class="group button-bar">
                <tal:button repeat="action view/actions/values"
                            replace="structure action/render"
                />
              </div>
            </fieldset>
          </div>
        </form>
        <tal:block replace="tile:client-analytics" />
      </div>
    </metal:slot>
  </body>
</html>
