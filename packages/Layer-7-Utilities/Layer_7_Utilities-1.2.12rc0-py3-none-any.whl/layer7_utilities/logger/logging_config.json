{
    "version": 1,
    "formatters": {
        "default": {
            "format": "[%(asctime)s] | %(levelname)-9s | %(message)s",
            "datefmt": "%Y/%m/%d %H:%M:%S"
        }
    },

    "handlers": {
        "rotateFileHandler_debug": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "default",
            "filename": "_DefaultName_Logs_Debug.log",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf8"
        },
        
        "rotateFileHandler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "default",
            "filename": "_DefaultName_Logs.log",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf8"
        },

        "consoleHandler": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "default",
            "stream": "ext://sys.stdout"
        }
    },

    "loggers": {
        "root": {
            "level": "DEBUG",
            "handlers": ["consoleHandler", "rotateFileHandler", "rotateFileHandler_debug"]
        }
    }
}