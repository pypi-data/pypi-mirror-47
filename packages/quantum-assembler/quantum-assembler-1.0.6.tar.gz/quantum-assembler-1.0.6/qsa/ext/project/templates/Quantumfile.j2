#######################################################################
#
#   PROJECT CONFIGURATION
#
#   This section specifies general settings about the project that is
#   maintained using the Quantum Service Assembler (QSA).
#
#######################################################################
project:
  # Symbolic name for the project. This must be a valid identifier in
  # any programming language; so to be secure the QSA enforces the
  # regular expression ^[a-zA-Z][\d\w]+$.
  name: {{ quantum.project.name or 'null' }}

  # General display name for the project
  display_name: {{ quantum.project.display_name or 'null' }}

  # Specifies the project type.
  type: {{ quantum.project.type }}

  # The primary programming language for software projects. This
  # should contain a null value for QSA-managed projects that are
  # not software e.g. deployments, container images etc.
  {%- if not quantum.project.language %}
  language: null
  {%- else %}
  language: {{ quantum.project.language }}
  {%- endif %}
