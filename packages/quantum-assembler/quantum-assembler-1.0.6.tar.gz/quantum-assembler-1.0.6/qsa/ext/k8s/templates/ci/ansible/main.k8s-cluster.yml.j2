#######################################################################
#
#   MAIN ANSIBLE PLAYBOOK for {{ PROJECT_NAME|upper }}
#
#   This playbook runs all tasks required to provision the Kubernetes
#   cluster that is maintained using the {{ PROJECT_NAME|upper }} repository.
#
#######################################################################
- hosts: localhost
  run_once: true
  gather_facts: false
  vars:
    target_environment: "{% raw %}{{ K8S_DEPLOYMENT_ENV|default('cluster') }}{% endraw %}"
    nsprefix: "{{ K8S_NAMESPACE_PREFIX }}"
  tasks:
  {%- for task in include_tasks %}
  - import_tasks: "{{ task.include_tasks }}"
  {%- endfor%}
