{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "argument_config",
  "description": "Viewer of PyTorch State File [.sf]",
  "type": "object",
  "properties": {
    "state_file": {
      "type": "string",
      "positional": true,
      "description": "path of PyTorch state file"
    },
    "load_model": {
      "type": "boolean",
      "default": false,
      "description": "load model and show"
    },
    "extra_import": {
      "type": "string",
      "default": null,
      "description": "import extra models"
    },
    "device": {
      "type": "string",
      "default": "cpu",
      "description": "load device, cpu in default"
    },
    "export_onnx": {
      "type": "string",
      "default": null,
      "description": "path of export ONNX model"
    },
    "input_size": {
      "type": "integer",
      "default": 224,
      "description": "input image size for ONNX export, 224 in default"
    },
    "verbose": {
      "type": "boolean",
      "default": false,
      "description": "verbose for ONNX export, false in default"
    }
  },
  "required": [
    "state_file"
  ],
  "additionalProperties": false
}
