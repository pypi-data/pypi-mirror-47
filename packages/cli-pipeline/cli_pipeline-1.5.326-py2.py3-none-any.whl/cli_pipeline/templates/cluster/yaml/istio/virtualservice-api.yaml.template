apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: api 
  labels:
    app.kubernetes.io/name: api
spec:
  hosts:
  - "*" 
  gateways:
  - {{ PIPELINE_API_GATEWAY }} 
  http:
  - match:
    - uri:
        prefix: /admin/api/c
    route:
    - destination:
        host: api 
        port:
          number: 32000 
      weight: 100
    timeout: 300s
    websocketUpgrade: true
  - match:
    - uri:
        prefix: /admin/tracking
    - uri:
        prefix: /ajax-api
    - uri:
        prefix: /api
    route:
    - destination:
        host: api
        port:
          number: 5000
      weight: 100
