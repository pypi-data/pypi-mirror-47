apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: dashboard-turbine 
spec:
  hosts:
  - "*" 
  gateways:
  - {{ PIPELINE_API_GATEWAY }} 
  http:
  - match:
    - uri: 
        prefix: /admin/turbine
    rewrite:
      uri: /
    route:
    - destination:
        host: dashboard-turbine 
        port:
          number: 8989 
      weight: 100
    websocketUpgrade: true
    appendHeaders:
      Upgrade: required
      Connection: upgrade 
