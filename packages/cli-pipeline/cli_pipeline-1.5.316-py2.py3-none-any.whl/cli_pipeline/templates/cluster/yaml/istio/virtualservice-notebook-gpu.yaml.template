apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: notebook-gpu
spec:
  hosts:
  - "*" 
  gateways:
  - gateway
  http:
  - match:
    - uri: 
        regex: /admin/nb/(.*)/(.*)/(api/kernels/[^/]+/(channels|iopub|shell|stdin)|terminals/websocket)/? 
    route:
    - destination:
        host: notebook-gpu
        port:
          number: 80
      weight: 100
    websocketUpgrade: true
  http:
  - match:
    - uri:
        prefix: /admin/nb
    route:
    - destination:
        host: notebook-gpu
        port:
          number: 80
      weight: 100
    websocketUpgrade: true
