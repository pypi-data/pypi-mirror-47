IDIR = .
CC = cl.exe
LINK = link.exe
CFLAGS = /I$(IDIR) $(YGGCCFLAGS)

SDIR = .
ODIR = .

LIBS = $(YGGLDFLAGS)

DEPS = $(IDIR)\hellofunc.h

OBJ = $(ODIR)\gcc_model.o $(ODIR)\hellofunc.o

.PHONY: all
all: gcc_model

gcc_model: $(OBJ)
	$(LINK) /OUT:$@.exe $** $(LIBS)

{$(SDIR)}.c{$(ODIR)}.o:
	@echo $(OBJ)
	$(CC) /c $< -Fo$@ $(CFLAGS)

{$(SDIR)}.cpp{$(ODIR)}.o:
	$(CC) /c $< -Fo$@ $(CFLAGS)

($OBJ) :

clean:
	del $(ODIR)\*.o *~ gcc_model.exe $(IDIR)\*~ 
