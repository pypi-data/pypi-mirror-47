IDIR = .
CC = gcc
LINK = g++
CFLAGS = -I$(IDIR) $(YGGCCFLAGS)

ODIR = .

LIBS = -lm $(YGGLDFLAGS)

.PHONY: all
all: backwards_modelA backwards_modelB

$(ODIR)/%.o: %.c
	$(CC) -c $(CFLAGS) $< -o $@

backwards_modelA: $(ODIR)/backwards_modelA.o
	$(LINK) -o $@ $^ $(CFLAGS) $(LIBS)

backwards_modelB: $(ODIR)/backwards_modelB.o
	$(LINK) -o $@ $^ $(CFLAGS) $(LIBS)

.PHONY: clean
clean:
	rm -f $(ODIR)/*.o *~ backwards_modelA backwards_modelB $(IDIR)/*~ 
